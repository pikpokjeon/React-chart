{
  "include": ["src", "src/custom.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "typings"
  ],
  "compilerOptions": {
    "outDir": "dist/", // target for compiled files
    "module": "esnext",
		"allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
		"moduleResolution": "node",
		"target": "es5",
		"strict": true,
		"sourceMap": true,
		"lib": ["es6", "dom"],
    "jsx": "react",
    "types": [
      "react",
      "jest"
    ],
		"baseUrl": "./src/",
		"paths": {
			"*": ["./app/components/*"],
		}
  }
}